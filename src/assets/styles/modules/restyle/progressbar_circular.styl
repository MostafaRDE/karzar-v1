.progress {
    position: absolute;
    bottom 0
    left: 0;
    right 0
    top: 0;
}

.progress-circle {
    transform: rotate(-90deg);
}

.progress-circle-back {
    fill: none;
}

.progress-circle-progress {
    fill: none;
    stroke-dashoffset: 0;
    transition: stroke-dasharray 0.7s linear 0s;
}

.progress-text {
    width: 100%;
    position: absolute;
    top: 50%;
    text-align: center;
    transform: translateY(-50%);
    -webkit-transform: translateY(-50%);
    -moz-transform: translateY(-50%);
}
