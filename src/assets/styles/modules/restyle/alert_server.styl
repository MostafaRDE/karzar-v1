.rs-alert
  display flex
  margin-bottom 10px
  padding 6px 15px
  border solid 1px rgba(255, 255, 255, 0.3)
  background-color rgba(255, 255, 255, 0.1)
  border-radius 4px
  &-danger
    background-color rgba(198, 70, 94, 0.1)
    border-color rgb(198, 70, 94)
  &-info
    background-color rgba(198, 70, 94, 0.1)
    border-color rgb(198, 70, 94)
.rs-alert--icon
  img
    display flex
    width 16px
.rs-alert--text
  display flex