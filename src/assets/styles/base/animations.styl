// Fade
.fade-enter-active, .fade-leave-active {
    transition: opacity .5s;
}
.fade-enter, .fade-leave-to /* .fade-leave-active below version 2.1.8 */ {
    opacity: 0;
}

// Slide Down Up 250px
.slide-down-up-250px-enter-active
    animation slide-down-250px .5s

.slide-down-up-250px-leave-active
    animation slide-down-250px .5s reverse

@keyframes slide-down-250px
    0%
        max-height 0
    100%
        max-height 250px

// Slide Down Up Fade
.slide-down-up-fade-enter-active
    transition all .3s ease

.slide-down-up-fade-leave-active
    transition all .8s cubic-bezier(1.0, 0.5, 0.8, 1.0)

.slide-down-up-fade-enter, .slide-down-up-fade-leave-to
    transform translateY(-100%)
    opacity 0