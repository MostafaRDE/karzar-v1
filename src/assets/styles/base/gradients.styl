$gradientBlue = {
    'base': radial-gradient(top center, #379bf4 0%, #6531c8 120%)
}
$gradientGreen = {
    'base': linear-gradient(-189deg, #90dc55 0%, #22828b 100%)
}
$gradientIndigo = {
    'base': linear-gradient(to top, rgb(34, 39, 66) 40px, transparent)
}
$gradientOrange = {
    'base': radial-gradient(ellipse at top center, #ff9634 0%, #ff6219 102%)
}
$gradientPurple = {
    'base': linear-gradient(-180deg,#8f92be 0%,#4b9cc3 100%)
}
$gradientRed = {
    'base': linear-gradient(0deg,#bb4e72 0%,#bb6c59 100%)
}

$gradients := {
    'blue': $gradientBlue,
    'green': $gradientGreen,
    'indigo': $gradientIndigo,
    'orange': $gradientOrange,
    'purple': $gradientPurple,
    'red': $gradientRed,
}